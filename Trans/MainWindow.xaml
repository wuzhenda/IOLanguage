<Window x:Class="Trans.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="MainWindow" Height="350" Width="525">
    <Window.Resources>
        <sys:String x:Key="import">导入</sys:String>
        <sys:String x:Key="export">导出</sys:String>

        <Style x:Key="cbStyle" TargetType="CheckBox">
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter  Property="Content" Value="{StaticResource import}"/>
                </Trigger>
                <Trigger Property="IsChecked" Value="False">
                    <Setter  Property="Content" Value="{StaticResource export}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
    </Window.Resources>
        <TabControl Margin="5">
        <TabItem Header="{Binding ElementName=isImportCB,Path=Content}"  x:Name="io_tab">
            <StackPanel Margin="3" >
                <CheckBox  Margin="3" x:Name="isImportCB" Style="{StaticResource cbStyle}" />
                <CheckBox  Margin="3" >22</CheckBox>
                <CheckBox  Margin="3" >33</CheckBox>
            </StackPanel>
        </TabItem>
        
        <TabItem Header="Help">
            <TextBlock Margin="3" >
                帮助文档
            </TextBlock>
        </TabItem>
    </TabControl>
    
    

</Window>
